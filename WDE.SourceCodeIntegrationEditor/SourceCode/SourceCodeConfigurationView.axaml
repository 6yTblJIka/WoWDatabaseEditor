<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sourceCode="clr-namespace:WDE.SourceCodeIntegrationEditor.SourceCode"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="sourceCode:SourceCodeConfigurationViewModel"
             x:Class="WDE.SourceCodeIntegrationEditor.SourceCode.SourceCodeConfigurationView">
  <DockPanel>
    <ToolbarControl DockPanel.Dock="Top">
      <ButtonImage ToolTip.Tip="Add folder" Image="Icons/icon_folder_2_opened.png" Text="Add folder" Command="{CompiledBinding AddDirectoryCommand}" />
      <ButtonImage ToolTip.Tip="Remove selected" Image="Icons/icon_delete.png" Text="Remove selected" Command="{CompiledBinding DeleteSelectedCommand}" />
    </ToolbarControl>
    <ListBox Items="{CompiledBinding Paths}" SelectedItem="{CompiledBinding SelectedPath, Mode=TwoWay}" />
  </DockPanel>
</UserControl>
