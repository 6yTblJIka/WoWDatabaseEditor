<UserControl x:Class="WDE.QuestChainEditor.Editor.Views.TriangleConnectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:GeminiGraphEditor;assembly=GeminiGraphEditor"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <controls:ColorToBrushConverter x:Key="ColorToBrushConverter" />
    </UserControl.Resources>
    <Polygon Points="0,0 8,5, 0,10" Stroke="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
             Margin="0,5,1,0" StrokeThickness="1">
        <Polygon.Style>
            <Style TargetType="Polygon">
                <Setter Property="Fill" Value="#01FFFFFF" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding NonEmpty}" Value="True">
                        <Setter Property="Fill"
                                Value="{Binding Color, Converter={StaticResource ColorToBrushConverter}}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Polygon.Style>
    </Polygon>
</UserControl>