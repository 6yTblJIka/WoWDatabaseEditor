<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\TheAvaloniaOpenGL\TheAvaloniaOpenGL.csproj" />
      <ProjectReference Include="..\TheMaths\TheMaths.csproj" />
    </ItemGroup>
    
    <PropertyGroup>
        <DefineConstants Condition="'$(RuntimeIdentifier)' == 'win7-x64'">$(DefineConstants);USE_OPENTK</DefineConstants>
    </PropertyGroup>
    
    <ItemGroup>
      <Folder Include="GUI" />
    </ItemGroup>
    
    <ItemGroup>
      <None Update="internalShaders\theengine.cginc">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="internalShaders\blit.frag">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="internalShaders\blit.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="internalShaders\blit.vert">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

</Project>
